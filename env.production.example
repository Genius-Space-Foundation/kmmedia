# ===========================================
# KM Media Training Institute - Production Environment
# ===========================================
# 
# IMPORTANT: Replace all placeholder values with actual production values
# Generate strong secrets using: openssl rand -base64 32

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL="postgresql://username:password@hostname:5432/kmmedia_production"

# Database connection pool settings
DATABASE_POOL_SIZE="20"
DATABASE_POOL_TIMEOUT="30"

# ===========================================
# JWT SECURITY (CRITICAL - MUST BE STRONG)
# ===========================================
# Generate using: openssl rand -base64 32
JWT_SECRET="REPLACE_WITH_STRONG_32_CHAR_SECRET_MINIMUM"
JWT_REFRESH_SECRET="REPLACE_WITH_DIFFERENT_STRONG_32_CHAR_SECRET"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ===========================================
# PAYMENT GATEWAY (PAYSTACK)
# ===========================================
# Use LIVE keys for production
PAYSTACK_SECRET_KEY="sk_live_your_live_paystack_secret_key"
PAYSTACK_PUBLIC_KEY="pk_live_your_live_paystack_public_key"

# ===========================================
# FILE STORAGE (CLOUDINARY)
# ===========================================
CLOUDINARY_CLOUD_NAME="your_production_cloudinary_cloud_name"
CLOUDINARY_API_KEY="your_production_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_production_cloudinary_api_secret"

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your_production_email@gmail.com"
SMTP_PASS="your_production_app_password"
EMAIL_FROM="KM Media Training Institute <noreply@kmmediatraining.com>"

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://your-domain.com"
NEXT_PUBLIC_APP_NAME="KM Media Training Institute"
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="REPLACE_WITH_STRONG_NEXTAUTH_SECRET"

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
CORS_ORIGIN="https://your-domain.com"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="15"

# File upload limits
MAX_FILE_SIZE="10485760" # 10MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,video/mp4,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document"

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
# Error monitoring (Sentry)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Analytics (Google Analytics)
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"

# ===========================================
# PERFORMANCE & CACHING
# ===========================================
# Redis for caching (if using)
REDIS_URL="redis://localhost:6379"

# CDN Configuration
CDN_URL="https://your-cdn-domain.com"

# ===========================================
# BACKUP & MAINTENANCE
# ===========================================
# Database backup configuration
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"

# Maintenance mode
MAINTENANCE_MODE="false"
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL="info"
LOG_FORMAT="json"

# ===========================================
# SSL/TLS CONFIGURATION
# ===========================================
# SSL certificate paths (if using custom certificates)
SSL_CERT_PATH="/path/to/certificate.crt"
SSL_KEY_PATH="/path/to/private.key"

# ===========================================
# BACKUP SERVICES
# ===========================================
# AWS S3 for backups (optional)
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="kmmedia-backups"

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# SMS notifications (Twilio)
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"
